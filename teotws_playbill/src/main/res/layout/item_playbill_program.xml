<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="#ffffff"
    android:padding="@dimen/item_padding">

    <ImageView
        android:id="@+id/item_playbill_program_normal_play_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_playbill_program_normal_time_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/item_ocx_padding_left"
        android:text="00:00"
        android:textColor="@color/playbill_program_text_color"
        android:textSize="@dimen/playbill_program_text_size" />

    <TextView
        android:id="@+id/item_playbill_program_normal_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/item_ocx_padding_left"
        android:text="节目名称"
        android:textColor="@color/playbill_program_text_color"
        android:textSize="@dimen/playbill_program_text_size" />

    <ImageView
        android:id="@+id/item_playbill_program_narmal_state_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
