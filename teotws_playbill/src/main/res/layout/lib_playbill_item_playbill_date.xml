<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item_padding"
    android:background="@color/playbill_item_date_bg_color"
    android:orientation="horizontal"

    android:gravity="center_vertical">

    <TextView
        android:id="@+id/item_playbill_date_day_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/playbill_date_text_color"
        android:text="04月05日"/>

    <TextView
        android:id="@+id/item_playbill_date_week_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/item_ocx_padding_left"
        android:textColor="@color/playbill_date_text_color"
        android:text=""/>

</LinearLayout>
