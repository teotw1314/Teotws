<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f3f3f3"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_bottom_dialog_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_bottom_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="12dp"
            android:text="title"
            android:textSize="20dp" />

        <View
            android:id="@+id/line_bottom_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/base_black" />

        <LinearLayout
            android:id="@+id/layout_bottom_dialog_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>

    <View
        android:id="@+id/divider_bottom_dialog_group"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/base_black" />

    <TextView
        android:id="@+id/text_bottom_dialog_cancle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="12dp"
        android:text="cancle"
        android:textSize="20dp" />


</LinearLayout>
