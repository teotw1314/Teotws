<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_main_padding_left"
        android:paddingRight="@dimen/item_main_padding_right">

        <ImageView
            android:id="@+id/item_main_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="@dimen/item_main_left_iv_padding"
            android:src="@mipmap/ic_loading_error" />

        <TextView
            android:id="@+id/item_main_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/item_main_appname_padding_left"
            android:paddingRight="@dimen/item_main_appname_padding_right"
            android:text="AppName"
            android:textSize="@dimen/item_main_appname_size" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_right" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider" />

</LinearLayout>
